@model Brand
@{
    ViewData["Title"] = "Detail";
}



<div class="row" style="width: 100%">
    <div class="col-lg-12">
        <h1 class="h3 mb-4 text-gray-800">Brand Detail Page</h1>
    </div>
    <div class="col-lg-2 ">
        <a class="btn btn-primary" asp-action="index" asp-controller="brand" asp-area="manage">Go To Home</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-4">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Name:@Model.Name</h5>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>

                    <th>Name</th>
                    <th>Created At</th>
                    <th>Created By</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Product product in Model.Products)
                {
                    <tr>
                        <td>@product.Title</td>
                        <td>@product.CreatedAt?.ToString("dd-MMM-yyyy")</td>
                        <td>@product.CreatedBy</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




